<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Bienvenue
			{% endblock %}
			- sortir.com
		</title>
		{# Run `composer require symfony/webpack-encore-bundle` and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		<!-- <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css"/> -->
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		{% set current_path = app.request.get('_route') %}
		{% include "components/navbar.html.twig" %}
		{% set array = {
			'admin': {
				'label': 'Admin',
				'route': 'admin',
				'auth': true,
				'admin': true
			  },
			'cities': {
				'label': 'Villes',
				'route': 'city_index',
				'auth': true,
				'admin': true
			  },
			  'places': {
				'label': 'Lieux',
				'route': 'place_index',
				'auth': true,
				'admin': true
			  },
			  'sites': {
				'label': 'Sites',
				'route': 'site_index',
				'auth': true,
				'admin': true
			  },
			  'users': {
				'label': 'Utilisateurs',
				'route': 'user_index',
				'auth': true,
				'admin': true
			  }
		  }
		  %}
		<div class="fixed z-40 w-full pb-3 bg-white shadow-sm container-custom">
			<nav
				class="flex space-x-4" aria-label="Tabs">
				<!-- Current: "", Default: "" -->
				{% for item in array %}
					<a href="{{ path(item.route) }}" class="px-3 py-2 text-sm font-medium rounded-md {{ app.request.attributes.get('_route') == item.route ? 'bg-red-100 text-red-700' : 'text-gray-500 hover:text-gray-700' }}">
						{{ item.label }}
					</a>
				{% endfor %}
			</nav>
		</div>
		{% for message in app.flashes('notice') %}
			{% if message %}
				<div class="fixed z-50 transform -translate-x-1/2 top-24 left-1/2">
					<div class="p-4 rounded-md shadow-md bg-blue-50">
						<div class="flex">
							<div
								class="flex-shrink-0">
								<!-- Heroicon name: solid/information-circle -->
								<svg class="w-5 h-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
									<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
								</svg>
							</div>
							<div class="flex-1 ml-3 md:flex md:justify-between">
								<div class="text-sm text-blue-700">

									<div class="flash-notice">
										{{ message }}
									</div>

								</div>
							</div>
						</div>
					</div>
				</div>
			{% endif %}
		{% endfor %}
		<div class="{{ current_path != 'welcome' ? 'content' :'' }}"> {% block body %}{% endblock %}
			</div>
			{% if current_path != 'welcome' %}
				<div class="footer">
					{% include "components/footer.html.twig" %}
				</div>
			{% endif %}

			{{ encore_entry_script_tags('app') }}
			{% block javascript %}{% endblock %}
		</body>
	</html>
