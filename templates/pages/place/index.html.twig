{% extends 'layouts/base.html.twig' %}

{% block title %}
	Lieux
{% endblock %}

{% block body %}
	<div class="mb-8 container-custom">
		<div class="mb-8">
			<div class="mb-6 text-3xl font-semibold text-red-600 font-montserrat">
				GÃ©rer les lieux
			</div>

			{{ form_start(form) }}
			<div>
				{{ form_errors(form) }}
			</div>

			<div class="max-w-lg">
				<label for="email" class="block text-sm font-medium text-gray-700">
					{{ form_label(form.search) }}
				</label>
				<div class="flex mt-1 rounded-md shadow-sm">
					<div class="relative flex items-stretch flex-grow focus-within:z-10">
						{{ form_widget(form.search) }}
					</div>
					{{ form_widget(form.submit) }}
				</div>
			</div>
			<div class="flex items-center mt-8 space-x-3">
				{{ form_widget(form.reset) }}
				<div class="flex justify-start">
					<a href="{{ path('place_create') }}" class="inline-flex justify-center px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-md shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
						Ajouter
					</a>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
		<div class="flex flex-col">
			<div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8" style="max-height: 660px">
				<div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
					<div class="overflow-hidden border-b border-gray-200 shadow sm:rounded-lg">
						<table class="min-w-full divide-y divide-gray-200">
							<thead class="bg-gray-50">
								<tr>
									<th scope="col" class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">
										Nom
									</th>
									<th scope="col" class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">
										Rue
									</th>
									<th scope="col" class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">
										Lat / Lon
									</th>
									<th scope="col" class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">
										Ville
									</th>
									<th scope="col" class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase">
										Sorties
									</th>
									<th scope="col" class="relative px-6 py-3">
										<span class="sr-only">Edit</span>
									</th>
								</tr>
							</thead>
							<tbody>
								{% for item in places %}
									<tr {{ loop.index % 2 == 0 ? 'bg-white' : 'bg-gray-50' }}>
										<td class="px-6 py-4 text-sm font-medium text-gray-900 whitespace-nowrap">
											{{ item.name }}
										</td>
										<td class="px-6 py-4 text-sm font-medium text-gray-900 whitespace-nowrap">
											{{ item.street }}
										</td>
										<td class="px-6 py-4 text-sm font-medium text-gray-900 whitespace-nowrap">
											{{ item.lat }}
											/
											{{ item.lon }}
										</td>
										<td class="px-6 py-4 text-sm font-medium text-gray-900 whitespace-nowrap">
											{{ item.city.name }}
										</td>
										<td class="px-6 py-4 text-sm font-medium text-gray-900 whitespace-nowrap">
											{{ item.trips.count }}
										</td>
										<td class="px-6 py-4 text-sm font-medium text-right whitespace-nowrap">
											<div class="flex items-center space-x-1">
												<a href="{{ path('place_edit', { id: item.id }) }}" class="text-red-600 hover:text-red-900">
													<svg class="w-6 h-6" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
														<path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
													</svg>
												</a>
												<a href="{{ path('place_delete', { id: item.id }) }}" class="text-red-600 hover:text-red-900">
													<svg class="w-6 h-6" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
														<path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
													</svg>
												</a>
											</div>
										</td>
									</tr>

								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
