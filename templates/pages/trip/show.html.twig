{% extends 'layouts/base.html.twig' %}

{% block title %}
	Sortie
	{{ trip.name }}
{% endblock %}

{% block body %}
	<div
		class="container-custom">
		<!-- This example requires Tailwind CSS v2.0+ -->
		<div class="gap-6 lg:grid lg:grid-cols-2">
			<div class="col-span-1 overflow-hidden bg-white shadow sm:rounded-lg">
				<div class="px-4 py-5 sm:px-6">
					<h3 class="text-lg font-medium leading-6 text-gray-900">
						Sortie
						{{ trip.name }}
					</h3>
					<p class="max-w-2xl mt-1 text-sm text-gray-500">
						Cette sortie est
						{{ trip.state|lower }}
					</p>
				</div>
				<div class="px-4 py-5 border-t border-gray-200 sm:p-0">
					<dl class="sm:divide-y sm:divide-gray-200">
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">
								Date
							</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{{ trip.beginDate|date("d/m/Y à H:m") }}
							</dd>
						</div>
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">
								Durée
							</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{{ trip.duration|date("H:m:s") }}
							</dd>
						</div>
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">
								Date de fin des inscriptions
							</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{{ trip.endDate|date("d/m/Y") }}
							</dd>
						</div>
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">
								Organisateur
							</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{{ trip.organisor.username }}
								({{ trip.organisor.firstname }}
								{{ trip.organisor.lastname }})
							</dd>
						</div>
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">
								Site
							</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{{ trip.site.name }}
							</dd>
						</div>
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">
								Lieu
							</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								<div>
									{{ trip.place.name }}
								</div>
								<ul class="pl-1 mt-2 text-gray-500 list-disc list-inside">
									<li>Rue :
										{{ trip.place.street }}</li>
									<li>Ville :
										{{ trip.place.city.name }}</li>
									<li>Code postal :
										{{ trip.place.city.postcode }}</li>
									<li>Lat :
										{{ trip.place.lat }}
										/ Lon :
										{{ trip.place.lat }}</li>
								</ul>
							</dd>
						</div>
						<div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
							<dt class="text-sm font-medium text-gray-500">
								Description
							</dt>
							<dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
								{{ trip.description }}
							</dd>
						</div>
					</dl>
				</div>
			</div>
			<div class="col-span-1 overflow-hidden bg-white shadow sm:rounded-lg">
				<div class="px-4 py-5 sm:px-6">
					<h3 class="text-lg font-medium leading-6 text-gray-900">
						Inscriptions
					</h3>
					<p class="max-w-2xl mt-1 text-sm text-gray-500">
						Cette sortie propose
						{{ trip.maxSubscriptions }}
						places,
						{{ trip.subscriptions.count }}
						sont actuellement occupées
					</p>
				</div>
				<div class="px-4 py-5 border-t border-gray-200 sm:p-0">
					<ul class="px-8 mt-5 overflow-y-auto divide-y divide-gray-200 max-h-96">
						{% for item in trip.subscriptions %}
							<li class="flex py-4">
								<img class="w-10 h-10 rounded-full" src="https://eu.ui-avatars.com/api/?name={{ item.username }}" alt="">
								<div class="ml-3">
									<p class="text-sm font-medium text-gray-900">
										{{ item.firstname }}
										{{ item.lastname }}
										({{ item.username }})
									</p>
									<p class="text-sm text-gray-500">{{ item.email }}</p>
								</div>
							</li>
						{% endfor %}
					</ul>

				</div>
			</div>
		</div>

	</div>
{% endblock %}
